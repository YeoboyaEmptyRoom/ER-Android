<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/room_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        app:layout_constraintStart_toEndOf="@+id/room_image"
        app:layout_constraintTop_toTopOf="@+id/room_image"
        app:layout_constraintBottom_toBottomOf="@+id/room_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/room_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전세 3억 4000"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/room_width_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42.14m^2, 8층"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/room_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구리구 구리동"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아파트"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>